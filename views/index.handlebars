{{!-- Create a space for Page title and Burger image --}}
<h1>Eat-Da-Burger</h1>
{{!-- List of burgers that haven't been eaten --}}
<ul>
    {{#each cats}}
    {{#unless sleepy}}
    {{> cats/cat-block sleep=true}}
    {{/unless}}
    {{/each}}
</ul>
{{!-- Create a button for eating each burger --}}

{{!-- List of burgers that have been eaten --}}
<h2>These burgers have been chomped</h2>

<ul>
    {{#each cats}}
    {{#if sleepy}}
    {{> cats/cat-block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

